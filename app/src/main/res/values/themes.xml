<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ICoserKT" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">#F2F3FF</item>
        <item name="colorOnBackground">@color/background_color</item>
        <item name="colorPrimary">@color/text_color</item>>
        <item name="colorOnTertiary">@color/text_grey</item>
        <item name="android:fontFamily">@font/pingfang</item>
        <item name="cardBackgroundColor">@color/card_background_color</item>
        <item name="colorOnSurfaceVariant">#40000000</item>
        <item name="colorContainer">#F2F3FF</item>

        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- 设置Toolbar标题字体的颜色大小 -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item><!--toolbar标题字体大小-->
        <item name="android:textColor">#171717</item><!--toolbar标题字体颜色-->
    </style>
    <style name="Toolbar.TitleTextLandscape" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item><!--toolbar标题字体大小-->
        <item name="android:textColor">#F3F3F3</item><!--toolbar标题字体颜色-->
    </style>
    <!-- 白色字体继承-->
    <style name="Toolbar.TitleTextWhite" parent="Toolbar.TitleText">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- 设置Toolbar 子标题subtitle标题字体的大小 -->
    <style name="Toolbar.SubTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#393939</item>
    </style>
    <style name="Toolbar.SubTitleTextLandscape" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#F3F3F3</item>
    </style>
    <!-- 白色字体继承-->
    <style name="Toolbar.SubTitleTextWhite" parent="Toolbar.SubTitleText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Theme.ICoserKT" parent="Base.Theme.ICoserKT" />
</resources>
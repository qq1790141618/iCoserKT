<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorContainer"
    app:layout_constraintTop_toTopOf="@+id/time_range_view"
    android:id="@+id/menu_block">

    <View
        android:layout_width="5dp"
        android:layout_height="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/top_right"
        android:background="?attr/colorOnBackground"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/top_right"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="?attr/colorContainer"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/top_right"
        app:layout_constraintBottom_toTopOf="@+id/bottom_right"
        android:layout_marginLeft="5dp"
        android:background="@drawable/shape_menu"/>

    <View
        android:layout_width="5dp"
        android:layout_height="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottom_right"
        android:background="?attr/colorOnBackground"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_right"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="?attr/colorContainer"/>

</androidx.constraintlayout.widget.ConstraintLayout>
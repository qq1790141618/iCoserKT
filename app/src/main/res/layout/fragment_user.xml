<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.fragment.UserFragment"
    android:background="?attr/colorContainer"
    android:orientation="vertical"
    tools:ignore="PrivateResource"
    tools:viewBindingIgnore="false">

    <include android:id="@+id/user_card" layout="@layout/user_card" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="12dp"
        app:cardBackgroundColor="?attr/colorOnBackground"
        app:cardElevation="0dp"
        app:cardCornerRadius="7dp">

        <LinearLayout
            android:id="@+id/a_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="12dp"
        app:cardBackgroundColor="?attr/colorOnBackground"
        app:cardElevation="0dp"
        app:cardCornerRadius="7dp">

        <LinearLayout
            android:id="@+id/b_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="12dp"
        app:cardBackgroundColor="?attr/colorOnBackground"
        app:cardElevation="0dp"
        app:cardCornerRadius="7dp">

        <LinearLayout
            android:id="@+id/c_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </androidx.cardview.widget.CardView>
</LinearLayout>
            android:name=".ui.follow_page.FollowActivity"
            android:exported="false" />
        <activity
            android:name=".ui.setting_page.SetColorThemeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.forbidden_page.ForbbidenActivity"
            android:exported="false" />
        <activity
            android:name=".ui.setting_page.SetDefaultResolutionRatioActivity"
            android:exported="false"
            android:theme="@style/Theme.ICoserKT" />
        <activity
            android:name=".ui.setting_page.SettingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.about_page.AboutActivity"
            android:exported="false" />
        <activity
            android:name=".ui.update_dialog.UpdateActivity"

        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ICoserKT"
        tools:targetApi="31">
        <activity
            android:name=".ui.setting_page.SetNotificationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.history_page.HistoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.collection_page.CollectionViewActivity"
            android:exported="false" />
